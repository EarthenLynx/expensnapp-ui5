<mvc:View controllerName="sap.ui.demo.basicTemplate.controller.Home" displayBlock="true"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc">
	<Page id="page" title="{i18n>title}">
		<headerContent>
			<Select
				items="{config>/videoDevices}">
				<core:ListItem key="{config>deviceId}" text="{config>label}"/>
			</Select>
		</headerContent>

		<!-- <video id="video-stream" autoplay /> -->
		<!-- <canvas id="video-canvas" style="display: none;" /> -->

		<content>
			<core:HTML content='&lt;video id=&quot;video-stream&quot; autoplay /&gt;'></core:HTML>
			<core:HTML content='&lt;canvas id=&quot;video-canvas&quot; style=&quot;display: none;&quot; /&gt;'></core:HTML>
			<Image ariaDetails="camera snap" src="{config>/cameraSnapUrl}" width="100%" decorative="false" />
		</content>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button tooltip="Take picture" icon="sap-icon://camera" press="handleTakeScreenshot" />
				<ToolbarSpacer/>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>
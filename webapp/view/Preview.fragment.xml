<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core">
  <Dialog id="preview" title="Preview">
    <Image ariaDetails="camera snap" src="{config>/cameraSnapUrl}" width="100%" decorative="false" />

    <OverflowToolbar>
      <ToolbarSpacer/>
      <Button press="onClosePreview" text="Close" icon="sap-icon://decline" type="Reject"/>
      <Button press="handleSendToUrl" text="Send to server" icon="sap-icon://paper-plane" type="Accept" />
    </OverflowToolbar>
  </Dialog>
</core:FragmentDefinition>
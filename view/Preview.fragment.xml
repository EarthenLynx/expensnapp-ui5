<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core">
  <Dialog id="preview" title="{i18n>fragmentPreviewDialogTitle}" icon="sap-icon://background">
    <Image ariaDetails="camera snap" src="{config>/cameraSnapUrl}" width="100%" decorative="false" />

    <OverflowToolbar>
      <ToolbarSpacer/>
      <Button press="onCloseImagePreview" text="{i18n>buttonCloseText}" icon="sap-icon://decline" type="Reject"/>
      <Button press="handleSendImage" text="{i18n>buttonActionText}" icon="sap-icon://paper-plane" type="Accept" />
    </OverflowToolbar>
  </Dialog>
</core:FragmentDefinition>